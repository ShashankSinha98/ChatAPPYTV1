<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profile_img_show_msg"
        android:src="@drawable/def_pp"/>

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/rl_img_l"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_left"
        android:layout_toRightOf="@id/profile_img_show_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:id="@+id/show_img_msg"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_seen"
        android:visibility="gone"
        android:layout_marginLeft="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_below="@id/rl_img_l"
        android:layout_marginRight="10dp"/>

</RelativeLayout>