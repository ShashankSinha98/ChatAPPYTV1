<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_item_image_civ"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/def_pp"/>

    <TextView
        android:id="@+id/user_item_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/user_item_image_civ"
        android:layout_centerVertical="true"
        android:textSize="23dp"
        android:layout_toRightOf="@id/user_item_image_civ"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/img_on"
        android:src="@color/green"
        android:visibility="gone"
        android:layout_below="@id/user_item_username_tv"
        android:layout_toRightOf="@id/user_item_image_civ"
        android:layout_marginLeft="-17dp"
        android:layout_toEndOf="@id/user_item_image_civ"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/img_off"
        android:src="@color/grey"
        android:visibility="gone"
        android:layout_below="@id/user_item_username_tv"
        android:layout_toRightOf="@id/user_item_image_civ"
        android:layout_marginLeft="-17dp"
        android:layout_toEndOf="@id/user_item_image_civ"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@id/user_item_username_tv"
        android:layout_toRightOf="@id/user_item_image_civ"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="5dp"
        android:textColor="@color/light_blue"
        android:id="@+id/last_msg"/>
</RelativeLayout>